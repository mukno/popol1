<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.mapper.MemberMapper">



	<select id="member_login" resultType="com.spring.domain.MemberVO">
		select *
		 from member_list
		 where userId=#{userId} and userPw=#{userPw}
	</select>
	
	<update id="change_pwd">
		update member_list set userPw=#{new_userPw} where userId=#{userId} 
	</update>
	
	<select id="select_member" resultType="com.spring.domain.MemberVO">
		select *
		 from member_list
		 where userId=#{userId}
	</select>

</mapper>